@using Infrastructure
@using MusicDownloader.Resources.Pages

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Song downloader</title>
    <link rel="icon" type="image/png" href="../Content/images/logo1.1.png" />
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" type="text/css"/>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
    <link href="~/Content/Site.css" rel="stylesheet" type="text/css" />
    <script src="~/Scripts/modernizr-2.6.2.js"></script>
    <script src="~/Scripts/jquery-1.10.2.min.js"></script>
    <script src="~/Scripts/jquery.localize.min.js"></script>
    <script src="~/Scripts/bootstrap.min.js"></script>
</head>
<body>

    <div class="main-navbar">
        <div class="main-navbar-inner">
            <div class="container">
                @*<button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>*@
                <a class="brand" href="/Home/Index"><img src="../Content/images/logo1.1.png" alt="Song downloader"> 
                    @Constants.ApplicationName
                </a>
                <ul class="nav nav-collapse pull-right">
                    <li><a href="/Home/About"><i class="fa fa-info-circle" aria-hidden="true"></i> @MusicDownloader.Resources.Pages.Layout.AboutLinkText</a></li>
                    <li><a href="/Home/FAQ"><i class="fa fa-question-circle-o" aria-hidden="true"></i> @MusicDownloader.Resources.Pages.Layout.FaqLinkText</a></li>
                    <li><a href="/Home/HowItWorks"><i class="fa fa-github" aria-hidden="true"></i> @MusicDownloader.Resources.Pages.Layout.HowItWorksLinkText</a></li>
                </ul>
                @*<div class="nav-collapse collapse"></div>*@
            </div>
        </div>
    </div>

    @RenderBody()

    <footer>
        <div class="container footer-container">
            <span class="pull-left"><i class="fa fa-copyright" aria-hidden="true"></i> @DateTime.Now.Year - @Constants.ApplicationName
            </span>
            <span class="pull-right">
                <a href="#contact-me-modal" role="button" data-toggle="modal" style="text-transform: uppercase">
                    <i class="fa fa-paper-plane" aria-hidden="true"></i> @MusicDownloader.Resources.Pages.Layout.ContactMeLinkText
                </a>
            </span>
        </div>
    </footer>

    <div id="contact-me-modal" class="modal fade" tabindex="-1" role="dialog" aria-labelledby="contact-me-modalLabel" aria-hidden="true" style="display: none;">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">×</button>
                    <h3 class="modal-title" id="contact-me-modalLabel">
                        <i class="icon-mail"></i> @ContactMeForm.ContactUsHeader
                    </h3>
                </div>
                <div class="modal-body">
                    <form action="#" id="contact-me-form" style="text-align: center;">
                        <input type="text" id="name" class="form-control modal-item" placeholder="@ContactMeForm.YourName"
                               required>
                        <input type="email" id="email" class="form-control modal-item" placeholder="@ContactMeForm.YourEmail"
                               required>
                        <textarea rows="4" id="message" class="form-control modal-item" placeholder="@ContactMeForm.Message"
                                  required></textarea>
                        <div class="request-result"></div>
                        <button type="submit" class="btn btn-info btn-md">
                            <i class="fa fa-paper-plane" aria-hidden="true"></i> @ContactMeForm.SendButtonText
                        </button>
                    </form>
                </div>
            </div>
        </div>
    </div>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jqBootstrapValidation/1.3.7/jqBootstrapValidation.min.js"></script>
    <script src="~/Scripts/jquery.blockUI.js"></script>
    <script src="~/Scripts/app/constants.js"></script>
    <script src="~/Scripts/app/main.js"></script>
    <script src="~/Scripts/app/contact-me-form.js"></script>
    <script>
        $('#contact-me-modal').modal('hide');

        $('#contact-me-modal').on('show.bs.modal', function(e) {
            $('#contact-me-modal').css('display', 'flex');
        });

        main.initialize();
    </script>
</body>
</html>