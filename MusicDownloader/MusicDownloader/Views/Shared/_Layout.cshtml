<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Song downloader</title>
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" type="text/css"/>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
    <link href="~/Content/Site.css" rel="stylesheet" type="text/css" />
    <script src="~/Scripts/modernizr-2.6.2.js"></script>
</head>
<body>

    <div class="main-navbar">
        <div class="main-navbar-inner">
            <div class="container">
                @*<button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>*@
                <a class="brand" href="/Home/Index"><img src="../Content/images/279683.png" alt="Song downloader" style="max-height: 60px;"> 
                    SONG DOWNLOADER
                </a>
                <ul class="nav nav-collapse pull-right">
                    <li><a href="/Home/About"><i class="fa fa-info-circle" aria-hidden="true"></i> About</a></li>
                    <li><a href="/Home/FAQ"><i class="fa fa-question-circle-o" aria-hidden="true"></i> FAQ</a></li>
                    <li><a href="/Home/HowItWorks"><i class="fa fa-github" aria-hidden="true"></i> How it works</a></li>
                </ul>
                @*<div class="nav-collapse collapse"></div>*@
            </div>
        </div>
    </div>

    @RenderBody()

    <footer>
        <div class="container footer-container">
            <span class="pull-left"><i class="fa fa-copyright" aria-hidden="true"></i> @DateTime.Now.Year - Song downloader
            </span>
            <span class="pull-right">
                <a href="#myModal" role="button" data-toggle="modal"> <i class="fa fa-paper-plane" aria-hidden="true"></i> CONTACT</a>
            </span>
        </div>
    </footer>

    <div id="myModal" class="modal fade" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true" style="display: none;">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">×</button>
                    <h3 class="modal-title" id="myModalLabel">
                        <i class="icon-mail"></i> Contact Me
                    </h3>
                </div>
                <div class="modal-body">
                    <form action="#" style="text-align: center;">
                        <input type="text" class="form-control modal-item" placeholder="Your Name">
                        <input type="text" class="form-control modal-item" placeholder="Your Email">
                        <textarea rows="4" class="form-control modal-item" placeholder="Message"></textarea>
                        <button type="submit" class="btn btn-info btn-md"><i class="fa fa-paper-plane" aria-hidden="true"></i> SEND</button>
                    </form>
                </div>
            </div>
        </div>
    </div>

    <script src="~/Scripts/jquery-1.10.2.min.js"></script>
    <script src="~/Scripts/bootstrap.min.js"></script>
    <script src="~/Scripts/jquery.blockUI.js"></script>
    <script src="~/Scripts/app/main.js"></script>
    <script>
        $('#myModal').modal('hide');
    </script>
</body>
</html>