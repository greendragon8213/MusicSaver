@using Infrastructure
@using MusicDownloader.Resources.Pages
@{
    ViewBag.Title = "";
}

@section PageMeta
{
    <meta name="keywords" lang="EN" content="music, download, free, multiple, playlist, offline, download music">
    <meta name="description" lang="EN" content="Download lots of music at once free">
    <meta name="keywords" lang="RU" content="музыка, скачать, бесплатно, много, плейлист, оффлайн, загрузить музыку">
    <meta name="description" lang="RU" content="Скачать много музыки бесплатно">
    <meta name="keywords" lang="UK" content="музика, завантажити, безкоштовно, багато, плейлист, оффлайн, завантажити музику">
    <meta name="description" lang="UK" content="Завантажити багато музики безкоштовно">
}
<div class="home-page">
    <div class="container body-content">
        <h1>@Index.DownloadSongs</h1>
        <div class="row">
            <div class="col-xs-12 col-md-12" id="songs-download-box">
                <p>@Index.SpecifyNamesToDownload</p>

                <div class="row">
                    <div class="col-xs-1 col-md-2"></div>
                    <textarea class="col-xs-10 col-md-8" rows="16" id="songs-names-list" required
                              placeholder="Queen - Bohemian Rhapsody"></textarea>
                    <div class="col-xs-1 col-md-2"></div>
                </div>
                <br/>
                <button class="btn btn-lg btn-info" onclick="index.downloadSongs()">
                    <i class="fa fa-download" aria-hidden="true"></i>
                    @Index.DownloadSongsButtonText
                </button>
                <br/>
            </div>

            <div class="col-xs-1 col-md-2"></div>
            <div class="col-xs-10 col-md-8" id="songs-download-ok-result" style="display: none;">
                <div id="download-should-start-message"></div>
            </div>
            <div class="col-xs-10 col-md-8" id="songs-download-error-result" style="display: none;">
                <div id="error-message"></div>
            </div>
            <div class="col-xs-1 col-md-2"></div>
        </div>
    </div>
</div>